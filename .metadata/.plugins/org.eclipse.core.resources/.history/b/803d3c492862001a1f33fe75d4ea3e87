 double promedio_ultimos(double ultimo)
 {
   static double lista[4] = {0,0,0,0,0};

   lista[4] = lista[3];
   lista[3] = lista[2];
   lista[2] = lista[1];
   lista[1] = lista[0];
   lista[4] = ultimo;

   return (lista[0]+lista[1]+lista[2]+lista[3]+lista[4])/5;
 }
